<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.devdelhi.unplugged.TermsActivity">

    <TextView
        android:id="@+id/title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="454dp"
        android:background="#FFCC00"
        android:textAlignment="center"
        android:padding="20dp"
        android:paddingStart="20dp"
        android:text="Terms And Conditions"
        android:textColor="#dd000000"
        android:textSize="20dp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.347" />

    <TextView
        android:id="@+id/description"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:layout_marginEnd="20dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:paddingEnd="30dp"
        android:paddingStart="30dp"
        android:text="1. This App Doesn't Take Responsibility Of Your Device.
\n\n
2. This App Will Bring Attention To Your Device In Event Of Any Theft.
\n\n
3. This App Will Not Be Entitled For Any Kind Of Inconvenience Or Disturbance.
\n\n
4. This App WIll Also Be Not Entitled For Anything Whatsoever.
"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.285"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/title"
        app:layout_constraintVertical_bias="0.071" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="match_parent"
        android:paddingStart="30dp"
        android:layout_height="wrap_content"
        android:text="UnPlugged Created By DevDelhi 2017"
        android:textColor="#000000"
        android:padding="10dp"
        android:textAlignment="center"
        android:textStyle="bold"
        android:background="#FFCC00"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />
</android.support.constraint.ConstraintLayout>
