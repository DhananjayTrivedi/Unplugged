<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF">

        <ImageView
            android:layout_marginTop="80dp"
            android:id="@+id/slide_image"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="30dp"
            android:background="#FFCC00"
            android:scaleType="fitCenter"
            android:padding="30dp"
            app:srcCompat="@drawable/theft_black" />

        <TextView
            android:id="@+id/slide_heading"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/slide_image"
            android:layout_centerHorizontal="true"
            android:padding="10dp"
            android:text="Protection Against Theft"
            android:textAlignment="center"
            android:textStyle="bold"
            android:textColor="#000000"
            android:textSize="20dp" />

        <TextView
            android:id="@+id/slide_description"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignEnd="@+id/slide_heading"
            android:layout_below="@+id/slide_heading"
            android:paddingLeft="35dp"
            android:paddingRight="35dp"
            android:paddingTop="20dp"
            android:lineSpacingExtra="5dp"
            android:text="Lorem ipsum Lorem ipsum Lorem ipsum Lorem ipsum Lorem ipsum Lorem ipsum Lorem ipsum Lorem ipsum Lorem ipsum Lorem ipsum Lorem ipsum Lorem ipsum "
            android:textAlignment="center"
            android:textColor="#aa000000"
            android:textSize="15sp" />


</RelativeLayout>